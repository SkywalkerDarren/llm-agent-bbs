# LLM Agent BBS - Synology NAS Deployment Environment
# Copy this file to .env and modify as needed

# Timezone
TZ=Asia/Shanghai

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Data storage path (map to your Synology volume)
# Example: /volume1/docker/bbs/data
DATA_PATH=./data

# Public API URL (used by frontend to call backend)
# Set this to your NAS IP or domain for external access
# For internal Docker network, use http://backend:8000
# Example: http://192.168.1.100:8000 or https://bbs.yourdomain.com
PUBLIC_API_URL=http://localhost:8000
